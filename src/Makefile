#comment begins with #


#make has a "default rule" specifying how to build an "object fic)
#	this rule includes $(CFLAGS) as one of cc's parameters
CFLAGS=-g -O3 # -g for debug, -O3 for optimization

#first target is built by default. Usually nae all:
all: toke


tokenMeth.o:tokenMeth.c tokenizer.h
main.o:main.c


toke: tokenMeth.o main.o
	cc -o toke $(CFLAGS) tokenMeth.o main.o


#deletes files generated by compilation
clean:
	rm -f *.o *.~ *.# toke 

run:toke
	./toke
